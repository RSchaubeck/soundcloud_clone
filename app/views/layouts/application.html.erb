<!DOCTYPE html>
<html>
  <head>
    <title>Jaecloud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png">
    <%= favicon_link_tag asset_path('favicon.png') %>

    <meta name="image" property="og:image" content="<%= image_url('preview.png') %>">

    <script src="https://kit.fontawesome.com/bc3742ba46.js" crossorigin="anonymous"></script>
    <script type="text/javascript">
        window.splashImg = "<%= image_url('splash1.jpg') %>"
    </script>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
